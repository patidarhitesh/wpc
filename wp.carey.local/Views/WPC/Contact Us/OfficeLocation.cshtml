@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}
<div class="officeLocationSection paddingBot100">
    <div class="container">
        <h3 data-aos="fade-up" data-aos-duration="1000" data-aos-offset="0">
            office location
            </h2>
            <div class="row mt60">
                <div class="col-md-12">
                    <div class="largeImgPlaceholder" data-aos="fade-up" data-aos-duration="1000" data-aos-offset="0">
                        @Html.Sitecore().Field("Image", new { @class = "img-responsive", mw = 900, mh = 610 })
                    </div>
                    <div class="locations" data-aos="fade-up" data-aos-duration="1000" data-aos-offset="0">
                        <h4>@Html.Sitecore().Field("Location")</h4>
                        <p>
                            <a href="javascript:void(0);" data-toggle="modal" data-target="#mapPopup">
                                @Html.Sitecore().Field("Name")<br>
                                @Html.Sitecore().Field("Address")
                            </a>
                        </p>
                        <p> <a href="tel:(212) 492-1100">@Html.Sitecore().Field("Phone")</a></p>
                    </div>

                </div>
            </div>
            
            @Html.Sitecore().Placeholder("LocationRow")
</div>
</div>
</div>